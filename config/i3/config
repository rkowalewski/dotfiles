        ~/.screenlayout/work-displays.sh"; \
        mode "default"
    bindsym l exec "\
        ~/.screenlayout/laptop-display.sh"; \
        mode "default"
    bindsym h exec "\
        ~/.screenlayout/home-displays.sh"; \
        mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

